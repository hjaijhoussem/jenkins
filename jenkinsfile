pipeline {
    agent any

    environment {
        IMAGE_NAME= 'react-app'
    }

    stages {
        stage("checkout code"){
            steps {
                script {
                    // checkout([$class: 'GitSCM',branches: [[name: '*/main']],doGenerateSubmoduleConfigurations: false,extensions: [],submoduleCfg: [],userRemoteConfigs: [[url: 'https://github.com/hjaijhoussem/jenkins.git',credentialsId: 'gh_usr_pwd']]])
                    try {
                        git url: 'https://github.com/hjaijhoussem/jenkins.git', branch: 'main', credentialsId: 'gh_usr_pwd'
                    } catch (err) {
                        echo "Checkout failed: ${err}"
                        error "Checkout failed"
                    }
                }
            }
        }

        

        stage("build image"){
            steps{
                script{
                    docker.build("${IMAGE_NAME}:${env.BUILD_NUMBER}", 'jenkins/Dockerfile')
                }
            }
        }
    }
}
