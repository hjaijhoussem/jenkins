pipeline {
    agent any

    tools {
        maven 'Maven'
    }
    environment {
        IMAGE_NAME= 'react-app'
    }

    stages {
        stage("checkout code"){
            steps {
                script {
                    git branch: 'main', url: 'https://github.com/hjaijhoussem/jenkins.git',  credentialsId: 'gh_usr_pwd'
                }
            }
        }
        stage("build image"){
            steps{
                script{
                    docker.build("${IMAGE_NAME}:${env.BUILD_NUMBER}")
                }
            }
        }
        stage('scan'){
            steps{
                withSonarQubeEnv(installationName: 'sonarqube') {
                    // sh './mvnw clear org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.0:sonar'
                    sh "mvn clean verify sonar:sonar -Dsonar.projectKey=react-app -Dsonar.projectName='react app' -Dsonar.host.url=http://192.168.1.121:9000"
                }
            }
        }
        stage('Quality Gate'){
            steps{
                waitForQualityGate abortPipeline: true
            }
        }
        
    }
}
