pipeline {
    agent any

    environment {
        IMAGE_NAME= 'react-app'
    }

    stages {
        stage("checkout code"){
            steps {
                script {
                    git branch: 'main', url: 'https://github.com/hjaijhoussem/jenkins.git',  credentialsId: 'gh_usr_pwd'
                }
            }
        }

        stage('scan'){
            agent {
                docker {
                    image 'node:18'
                }
            }
            steps{
                withSonarQubeEnv(installationName: 'sonarqube') {
                    sh "npm install -g sonar:sonar -Dsonar.projectKey=react-app -Dsonar.projectName='react app' -Dsonar.host.url=http://192.168.1.121:9000"
                }
            }
        }

        stage('Quality Gate'){
            steps{
                waitForQualityGate abortPipeline: true
            }
        }

        stage("build image"){
            steps{
                script{
                    docker.build("${IMAGE_NAME}:${env.BUILD_NUMBER}")
                }
            }
        }
    }
}
