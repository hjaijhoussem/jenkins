pipeline {
    agent any

    environment {
        IMAGE_NAME= 'react-app'
    }

    stages {
        stage("checkout code"){
            steps {
                script {
                    git url: 'https://github.com/hjaijhoussem/jenkins.git', branch: 'main', credentialsId: 'gh-creds'
                }
            }
        }

        stage("build image"){
            steps{
                script{
                    docker.build("${IMAGE_NAME}:${env.BUILD_NUMBER}", '../Dockerfile')
                }
            }
        }
    }
}
