pipeline{

    agent any

    environment{
        NAME= 'hjaiej'
        IMAGE_NAME= 'react-app'
        GITHUB_URL= 'https://github.com/hjaijhoussem/jenkins.git'
        BRANCH= 'main'
        GH_TOKEN= 'gh_token'
    }

    stages {
        stage("checkout code"){
            steps {
                git url: "${GITHUB_URL}", branch: "${BRANCH}", credentialsId: "${GH_TOKEN}"
            }
        }

        stage("build image"){
            steps{
                docker.build("${IMAGE_NAME}:${env.BUILD_NUMBER}", '../Dockerfile')
            }
        }
    }

}