pipeline {
    agent any

    environment {
        NAME= 'hjaiej'
        IMAGE_NAME= 'react-app'
        // Avoid storing the token directly in the environment variable. Consider using Jenkins Credentials plugin.
        GITHUB_URL= 'https://github.com/hjaijhoussem/jenkins.git'
        BRANCH= 'main'
    }

    stages {
        stage("checkout code"){
            steps {
                script {
                    // Use credentials plugin to retrieve the token securely
                    def token = credentialsId('GH_TOKEN')
                    git url: "${GITHUB_URL}", branch: "${BRANCH}", credentialsId: token
                }
            }
        }

        stage("build image"){
            steps{
                docker.build("${IMAGE_NAME}:${env.BUILD_NUMBER}", '../Dockerfile')
            }
        }
    }
}
