pipeline {
    agent any

    environment {
        NAME= 'hjaiej'
        IMAGE_NAME= 'react-app'
        GITHUB_URL= 'https://github.com/hjaijhoussem/jenkins.git'
        BRANCH= 'main'
    }

    stages {
        stage("checkout code"){
            steps {
                script {
                    checkout scmGit(
                        branches: [[name: "${BRANCH}"]],
                        userRemoteConfigs: [[credentialsId: 'gh_cred',url: "${GITHUB_URL}"]]
                    )
                }
            }
        }

        stage("build image"){
            steps{
                docker.build("${IMAGE_NAME}:${env.BUILD_NUMBER}", '../Dockerfile')
            }
        }
    }
}
